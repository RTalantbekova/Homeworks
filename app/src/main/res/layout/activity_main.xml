<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:textSize="30sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/secondMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie two"
        app:layout_constraintTop_toBottomOf="@id/firstMovie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/thirdMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third movie"
        app:layout_constraintTop_toBottomOf="@id/secondMovie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@id/thirdMovie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>